@model EditBlogPostRequest
@{
}


<div class="container bg-secondary bg-opacity-10 py-5">
    <h1>
        Add Blog Post - Admin Functionality
    </h1>
</div>

<div class="container py-2">
    @if (Model != null)
    {
        <form method="post">

            <div class="mb-3">
                <label class="form-label">Id</label>
                <input class="form-control" type="text" id="Id" asp-for="Id" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Heading</label>
                <input class="form-control" type="text" id="heading" asp-for="Heading" />
            </div>

            <div class="mb-3">
                <label class="form-label">PageTitle</label>
                <input class="form-control" type="text" id="pageTitle" asp-for="PageTitle" />
            </div>

            <div class="mb-3">
                <label class="form-label">Content</label>
                <textarea class="form-control" id="content" asp-for="Content"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Short Description</label>
                <input class="form-control" type="text" id="shortDescription" asp-for="ShortDescription" />
            </div>

            <div class="mb-3">
                <label class="form-label">Featured Image URL</label>
                <input class="form-control" type="text" id="featuredImageUrl" asp-for="FeaturedImageUrl" />
            </div>
            <div class="mb-3">
                <label class="form-label">UrlHandleL</label>
                <input class="form-control" type="text" id="urlHandle" asp-for="UrlHandle" />
            </div>
            <div class="mb-3">
                <label class="form-label">Publish Date</label>
                <input type="date" id="publishDate" asp-for="PublishDate" />
            </div>
            <div class="mb-3">
                <label class="form-label">Author</label>
                <input class="form-control" type="text" id="author" asp-for="Author" />
            </div>
            <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" id="visible" asp-for="Visible" />
                <label class="form-label">Is Visible?</label>
            </div>
            <div class="mb-3">
                <label class="form-label"> Tags</label>
                <select class="form-select"
                        asp-items="@Model.Tags"
                        asp-for="SelectedTags"></select>
            </div>

            <div class="mb-3">
                <div class="d-flex">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <button class="btn btn-danger ms-2" type="submit"
                            asp-area=""
                            asp-controller="AdminBlogPost"
                            asp-action="Delete">
                        Delete
                    </button>

                </div>

            </div>

        </form>
    }
    else
    {
        <p> No Blog Post Found!</p>
    }
    
</div>